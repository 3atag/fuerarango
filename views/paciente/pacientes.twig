{% extends "layout.twig" %}

{% block content %}

<div class="contenido">

    <div class="migas">

        <nav class="nav-migas" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">Pacientes</li>
            </ol>
        </nav>


        <div class="col botonera">

            <button type="button" class="btn btn-outline-secondary btn-sm"><a href="/internaciones">Internaciones</a></button>

            <button type="button" class="btn btn-outline-secondary btn-sm"><a href="pacientes">Practicas</a></button>
        </div>
    </div>

    <div class="row comandos">

        <div class="col-6 botonera-agregar">
            <button type="button" class="btn btn-primary btn-sm"><a href="pacientes/nuevo">Nuevo</a></button>
            <button type="button" class="btn btn-primary btn-sm"><a href="pacientes/padron">Importar</a></button>
        </div>


    </div>


    <div class="row">
        <div class="col">

            <table class="table table-hover table-sm tablaClasica">

             <thead>
                    <tr>
                        <th>Beneficio</th>
                        <th>Nombre</th>
                        <th>DNI</th>
                        <th></th>

                    </tr>

                </thead>

                {% if paciente.padron == 0  %}

                    {% set fondoNoPadron = 'verdeClaro' %}

		        {% endif %}

                {% for paciente in pacientes %}

                    <tr class="{{ fondoNoPadron }}">
                        <td>{{ paciente.beneficio}}</td>
                        <td>{{ paciente.nombre}}</td>
                        <td>{{ paciente.dni}}</td>
                        <td class="botoneraTabla"><a href='#' class="btn btn-outline-secondary btn-sm" role="button"><i class="fas fa-ellipsis-h"></i></a>

                    </tr>

                {% endfor %}

            </table>

            <nav aria-label="...">
                <ul class="pagination pagination-sm">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>


    {% endblock %}

    {% block pacientes_js %}

        <script src="{{base_url}}js/paciente.js"></script>

	{% endblock %}