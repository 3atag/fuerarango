{% extends "layout.twig" %}

{% block content %}

<div class="agregar_internacion">

    <div class="row comandos">

        <div class="col-6 botonera-agregar">
            <a href="internaciones/nueva">
                <i class="fas fa-plus-circle fa-2x"></i>
            </a>
        </div>

        <div class="col botonera">
            <a href="pacientes">
                <i class="fas fa-user-circle fa-2x"></i>
            </a>

            <a href="practicas">
                <i class="fas fa-cog fa-2x"></i></i></i>
            </a>
        </div>

    </div>

    <div class="row">
        <div class="col">
  
            <table class="table table-hover table-sm tablaClasica">

            <thead>
                    <tr>
                        <th>Beneficio</th>
                        <th>Nombre</th>
                        <th>Ingreso</th>
                        <th>Egreso</th>
                        <th></th>
                  
                    </tr>

                </thead>
                
                <tbody>

                 {% for internacion in internaciones %}

                    <tr>
                        <td>{{internacion.beneficio}}</td>
                        <td>{{internacion.nombre}}</td>
                        <td>{{internacion.fechaIngreso|date("d/m/Y | H:i") }}</td>
                        <td>{{internacion.fechaEgreso|date("d/m/Y | H:i")}}</td>
                        <td class="botoneraTabla"><a href='internaciones/edit/{{internacion.id}}' class="btn btn-primary btn-sm" role="button"><i class="fas fa-pencil-alt"></i></a>
                        <a href='#' class="btn btn-danger btn-sm" role="button"><i class="fas fa-trash-alt"></i></a></td>
                        

                    </tr>

                {% endfor %}

                </tbody>

            </table>
        </div>
    </div>

</div>

{% endblock %}



