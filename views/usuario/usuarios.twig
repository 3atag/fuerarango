{% extends "layout.twig" %}

{% block content %}

	<div class="contenido">

		<div class="row comandos">

			<div class="col-6 botonera-agregar">
				<a href="usuarios/nuevo">
					<i class="fas fa-plus-circle fa-2x"></i>
				</a>
			</div>

		</div>


		<div class="row">
			<div class="col">

				<table class="table table-hover table-sm tablaClasica">

					<thead>
						<tr>
							<th>Nombre</th>
							<th>Correo</th>
							<th>Rol</th>
							<th></th>
						</tr>

					</thead>

					{% for usuario in usuarios %}

						<tr>
							<td>{{ usuario.nombre}}</td>
							<td>{{ usuario.email}}</td>
							<td>{{ usuario.tipo}}</td>
							<td class="botoneraTabla">
								<a href='#' class="btn btn-primary btn-sm" role="button"><i class="fas fa-pencil-alt"></i></a>
								<a href='#' class="btn btn-danger btn-sm" role="button"><i class="fas fa-trash-alt"></i></a>
							</td>

						</tr>

					{% endfor %}

				</table>
			</div>
		</div>
		<div class="form-row botonera-comun">
			<div class="col">

				<a href="/">
					<button type="button" class="btn btn-secondary btn-sm">Volver</button>
				</a>
			</div>
		</div>
	</div>

{% endblock %}
